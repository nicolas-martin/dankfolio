{
  "title": "Dankfolio Application Monitoring",
  "overwrite": true,
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Mimir",
          "value": "Mimir"
        }
      },
      {
        "name": "lokiDatasource",
        "type": "datasource",
        "query": "loki",
        "current": {
          "text": "Loki",
          "value": "Loki"
        }
      },
      {
        "name": "tempoDatasource",
        "type": "datasource",
        "query": "tempo",
        "current": {
          "text": "Tempo",
          "value": "Tempo"
        }
      }
    ]
  },
  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(rate(dankfolio_grpc_requests_total[5m]), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(rate(dankfolio_grpc_requests_total{rpc_grpc_status_code!=\"OK\"}[5m]), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}} - {{rpc_grpc_status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "errors/s",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "API Response Time (p95)",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(histogram_quantile(0.95, rate(dankfolio_grpc_request_duration_seconds_bucket[5m])), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.rpc_method}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "title": "External API Response Times",
      "type": "gauge",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "histogram_quantile(0.95, rate(dankfolio_api_call_duration_seconds_bucket[5m]))",
          "legendFormat": "{{service_name}} - {{endpoint_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.service_name} - ${__field.labels.endpoint_name}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          },
          "mappings": [],
          "min": 0,
          "max": 2
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        }
      }
    },
    {
      "title": "gRPC Endpoint Response Times",
      "type": "gauge",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(histogram_quantile(0.95, rate(dankfolio_grpc_request_duration_seconds_bucket[5m])), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.rpc_method}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.25
              },
              {
                "color": "red",
                "value": 0.5
              }
            ]
          },
          "mappings": [],
          "min": 0,
          "max": 1
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        }
      }
    },
    {
      "title": "Error Logs",
      "type": "table",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 36
      },
      "datasource": {
        "type": "loki",
        "uid": "${lokiDatasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${lokiDatasource}"
          },
          "direction": "backward",
          "editorMode": "builder",
          "expr": "{job=\"dankfolio\"} | json | level=\"error\"",
          "queryType": "range",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "delimiter": ",",
            "format": "json",
            "jsonPaths": [
              {
                "alias": "msg",
                "path": "msg"
              }
            ],
            "keepTime": false,
            "replace": false,
            "source": "Line"
          }
        },
        {
          "id": "extractFields",
          "options": {
            "delimiter": ",",
            "format": "json",
            "jsonPaths": [
              {
                "alias": "level",
                "path": "level"
              }
            ],
            "keepTime": false,
            "replace": false,
            "source": "Line"
          }
        },
        {
          "id": "formatTime",
          "options": {
            "outputFormat": "",
            "timeField": "Time",
            "useTimezone": true
          }
        },
        {
          "id": "filterFieldsByName",
          "options": {
            "include": {
              "names": [
                "Time",
                "labelTypes",
                "msg",
                "level"
              ]
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Line"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 243
              }
            ]
          }
        ]
      },
      "options": {
        "cellHeight": "sm",
        "footer": {
          "countRows": false,
          "fields": "",
          "reducer": [
            "sum"
          ],
          "show": false
        },
        "showHeader": true,
        "sortBy": []
      },
      "pluginVersion": "12.0.1"
    }
  ]
}
