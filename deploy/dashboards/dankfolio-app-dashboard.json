{
  "title": "Dankfolio Application Monitoring",
  "overwrite": true,
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Mimir",
          "value": "Mimir"
        }
      },
      {
        "name": "lokiDatasource",
        "type": "datasource",
        "query": "loki",
        "current": {
          "text": "Loki",
          "value": "Loki"
        }
      },
      {
        "name": "tempoDatasource",
        "type": "datasource",
        "query": "tempo",
        "current": {
          "text": "Tempo",
          "value": "Tempo"
        }
      }
    ]
  },
  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(rate(dankfolio_grpc_requests_total[5m]), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(rate(dankfolio_grpc_requests_total{rpc_grpc_status_code!=\"OK\"}[5m]), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}} - {{rpc_grpc_status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "errors/s",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "API Response Time (p95)",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(histogram_quantile(0.95, rate(dankfolio_grpc_request_duration_seconds_bucket[5m])), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.rpc_method}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "title": "External API Response Times",
      "type": "gauge",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "histogram_quantile(0.95, rate(dankfolio_api_call_duration_seconds_bucket[5m]))",
          "legendFormat": "{{service_name}} - {{endpoint_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.service_name} - ${__field.labels.endpoint_name}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          },
          "mappings": [],
          "min": 0,
          "max": 2
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      }
    },
    {
      "title": "gRPC Endpoint Response Times",
      "type": "gauge",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "label_replace(histogram_quantile(0.95, rate(dankfolio_grpc_request_duration_seconds_bucket[5m])), \"rpc_method\", \"$1\", \"rpc_method\", \"^/?dankfolio\\\\.v1\\\\.(.*)\")",
          "legendFormat": "{{rpc_method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.rpc_method}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.25
              },
              {
                "color": "red",
                "value": 0.5
              }
            ]
          },
          "mappings": [],
          "min": 0,
          "max": 1
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      }
    },
    {
      "title": "Database Operations",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 36
      },
      "collapsed": false
    },
    {
      "title": "Repository Method Calls",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 37
      },
      "datasource": {
        "type": "tempo",
        "uid": "P214B5B846CF3925F"
      },
      "targets": [
        {
          "datasource": {
            "type": "tempo",
            "uid": "P214B5B846CF3925F"
          },
          "query": "{resource.service.name=\"dankfolio-backend\" && name=\"repository.GetByField\"}",
          "queryType": "traceql",
          "refId": "GetByField"
        },
        {
          "datasource": {
            "type": "tempo",
            "uid": "P214B5B846CF3925F"
          },
          "query": "{resource.service.name=\"dankfolio-backend\" && name=\"repository.Get\"}",
          "queryType": "traceql",
          "refId": "Get"
        },
        {
          "datasource": {
            "type": "tempo",
            "uid": "P214B5B846CF3925F"
          },
          "query": "{resource.service.name=\"dankfolio-backend\" && name=\"repository.List\"}",
          "queryType": "traceql",
          "refId": "List"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "textMode": "name",
        "reduceOptions": {
          "values": false,
          "calcs": ["count"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "title": "Repository Method Duration",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 37
      },
      "datasource": {
        "type": "tempo",
        "uid": "P214B5B846CF3925F"
      },
      "targets": [
        {
          "datasource": {
            "type": "tempo",
            "uid": "P214B5B846CF3925F"
          },
          "query": "{resource.service.name=\"dankfolio-backend\" && name=\"repository.GetByField\"}",
          "queryType": "traceql",
          "refId": "GetByField"
        },
        {
          "datasource": {
            "type": "tempo",
            "uid": "P214B5B846CF3925F"
          },
          "query": "{resource.service.name=\"dankfolio-backend\" && name=\"repository.Get\"}",
          "queryType": "traceql",
          "refId": "Get"
        },
        {
          "datasource": {
            "type": "tempo",
            "uid": "P214B5B846CF3925F"
          },
          "query": "{resource.service.name=\"dankfolio-backend\" && name=\"repository.List\"}",
          "queryType": "traceql",
          "refId": "List"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "reduceOptions": {
          "values": false,
          "calcs": ["mean"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.table_name}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.05
              },
              {
                "color": "red",
                "value": 0.1
              }
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 45
      },
      "datasource": {
        "type": "loki",
        "uid": "${lokiDatasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${lokiDatasource}"
          },
          "expr": "{job=\"dankfolio\"} |= \"error\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "prettifyLogMessage": false,
        "sortOrder": "Descending"
      }
    }
  ]
}