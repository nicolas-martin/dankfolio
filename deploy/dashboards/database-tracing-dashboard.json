{
  "title": "Database Operations Tracing",
  "overwrite": true,
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Mimir",
          "value": "Mimir"
        }
      },
      {
        "name": "tempoDatasource",
        "type": "datasource",
        "query": "tempo",
        "current": {
          "text": "Tempo",
          "value": "Tempo"
        }
      }
    ]
  },
  "panels": [
    {
      "title": "All Database Operations",
      "type": "traces",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "tempo",
        "uid": "${tempoDatasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "tempo",
            "uid": "${tempoDatasource}"
          },
          "queryType": "search",
          "query": "{resource.service.name=\"dankfolio-backend\" && span.db.orm=\"gorm\"}",
          "limit": 20,
          "refId": "A"
        }
      ]
    },
    {
      "title": "Slow Database Queries (>100ms)",
      "type": "traces",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "datasource": {
        "type": "tempo",
        "uid": "${tempoDatasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "tempo",
            "uid": "${tempoDatasource}"
          },
          "queryType": "search",
          "query": "{resource.service.name=\"dankfolio-backend\" && span.db.orm=\"gorm\" && duration > 100ms}",
          "limit": 10,
          "refId": "A"
        }
      ]
    },
    {
      "title": "Database Errors",
      "type": "traces",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "datasource": {
        "type": "tempo",
        "uid": "${tempoDatasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "tempo",
            "uid": "${tempoDatasource}"
          },
          "queryType": "search",
          "query": "{resource.service.name=\"dankfolio-backend\" && span.db.orm=\"gorm\" && status.code=\"error\"}",
          "limit": 10,
          "refId": "A"
        }
      ]
    },
    {
      "title": "Database Operation Metrics",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 22
      },
      "collapsed": false
    },
    {
      "title": "Query Rate by Table",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 23
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "rate(dankfolio_database_operations_total[5m])",
          "legendFormat": "{{table_name}} - {{operation}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "title": "Database Response Time (p95)",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 23
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "expr": "histogram_quantile(0.95, rate(dankfolio_database_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "{{table_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "displayName": "${__field.labels.table_name}",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.05
              },
              {
                "color": "red",
                "value": 0.1
              }
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    }
  ]
}