{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"]
    },
    "types": ["node"],
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/**/*",
    "scripts/**/*"
  ]
} 
