{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"]
    },
    "types": ["node"],
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "declaration": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "scripts/**/*"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/**/*",
    "scripts/**/*"
  ]
}
